<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.remotearth.fake_coder.chatapp.screens.fragments.chatList.ChatListViewModel"/>
        <import type="android.view.View"/>

        <variable name="chatListViewModel" type="com.remotearth.fake_coder.chatapp.screens.fragments.chatList.ChatListViewModel"/>
        <variable name="userId" type="String"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".screens.fragments.chatList.ChatListFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorPrimary">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:onClick="@{() -> chatListViewModel.showProfile()}"
                tools:src="@drawable/ic_select_image"
                app:receiverImage="@{userId}"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chats"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:textColor="@color/white"/>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:indeterminate="true"
                android:visibility="@{chatListViewModel.isLoading ? View.VISIBLE : View.GONE}"
                android:layout_gravity="center"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/userListRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:visibility="@{chatListViewModel.isLoading ? View.GONE : View.VISIBLE}"
                tools:listitem="@layout/user_item"/>

        </FrameLayout>

    </LinearLayout>

</layout>